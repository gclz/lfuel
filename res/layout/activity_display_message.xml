<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/textViewCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <!-- MAIN CONSUMPTION -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom" >

        <TextView
            android:id="@+id/textViewCONSUMPTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:text="@string/dft"
            android:textColor="#FFFFFF"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/textViewCdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/unitConsumption"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <!--
                 android:layout_toRightOf="@id/textViewCONSUMPTION"
        android:layout_alignBaseline="@id/textViewCONSUMPTION"
    -->
    <!-- LABELS -->

    <TextView
        android:id="@+id/textViewTRdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="220dp"
        android:text="@string/totalRefills"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
    <!-- android:layout_below="@id/textViewCONSUMPTION" -->

    <TextView
        android:id="@+id/textViewKMdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTRdesc"
        android:paddingBottom="5dp"
        android:text="@string/totalKm"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewFUELdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewKMdesc"
        android:paddingBottom="5dp"
        android:text="@string/totalFuel"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewPRICEdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFUELdesc"
        android:paddingBottom="5dp"
        android:text="@string/totalPrice"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewAvgPdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPRICEdesc"
        android:paddingBottom="5dp"
        android:text="@string/AvgPrice"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
