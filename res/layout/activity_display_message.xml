    <!-- TOTAL REFILLS -->

    <TextView
        android:id="@+id/textViewTRunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewTRdesc"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:text="@string/unitRefill"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
    <!-- android:layout_below="@id/textViewCdesc" -->

    <TextView
        android:id="@+id/textViewTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewTRdesc"
        android:layout_toLeftOf="@id/textViewTRunit"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <!-- android:layout_below="@id/textViewCdesc" -->
    <!-- KM -->

    <TextView
        android:id="@+id/textViewTKMunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewKMdesc"
        android:layout_alignLeft="@id/textViewTRunit"
        android:layout_below="@id/textViewTRdesc"
        android:paddingLeft="10dp"
        android:text="@string/unitKm"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewKMdesc"
        android:layout_alignRight="@id/textViewTR"
        android:layout_below="@id/textViewTRdesc"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- FUEL -->

    <TextView
        android:id="@+id/textViewFUELunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewFUELdesc"
        android:layout_alignLeft="@id/textViewTRunit"
        android:layout_below="@id/textViewKMdesc"
        android:paddingLeft="10dp"
        android:text="@string/unitFuel"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewFUEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewFUELdesc"
        android:layout_alignRight="@id/textViewTR"
        android:layout_below="@id/textViewKMdesc"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- TOTAL PRICE -->

    <TextView
        android:id="@+id/textViewPRICEunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewPRICEdesc"
        android:layout_alignLeft="@id/textViewTRunit"
        android:layout_below="@id/textViewFUELdesc"
        android:paddingLeft="10dp"
        android:text="@string/unitPrice"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewPRICE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewPRICEdesc"
        android:layout_alignRight="@id/textViewTR"
        android:layout_below="@id/textViewFUELdesc"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- AVERAGE PRICE -->

    <TextView
        android:id="@+id/textViewAvgPunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewAvgPdesc"
        android:layout_alignLeft="@id/textViewTRunit"
        android:layout_below="@id/textViewPRICEdesc"
        android:paddingLeft="10dp"
        android:text="@string/unitPrice"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewAvgP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewAvgPdesc"
        android:layout_alignRight="@id/textViewTR"
        android:layout_below="@id/textViewPRICEdesc"
        android:text="@string/dft"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="deleteData"
        android:text="@string/buttonDelete"
        style="@style/big_button_text"
        android:background="@drawable/gl_button_red" />

</RelativeLayout>