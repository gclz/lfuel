    <TextView
        android:id="@+id/textViewTripConsumptiondesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAvgPdesc"
        android:paddingBottom="5dp"
        android:text="@string/tripConsumption"
        android:textColor="#FFFFFF"
