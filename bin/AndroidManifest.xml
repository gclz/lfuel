<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gclz.myapps.unfuel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        
        
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >       
            
        <activity
            android:name="gclz.myapps.unfuel.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gclz.myapps.unfuel.DisplayMessageActivity"
            android:label="@string/title_activity_display_message" >
        </activity>
        <activity
            android:name="gclz.myapps.unfuel.SelectVehicleActivity"
            android:label="@string/title_activity_select_vehicle"
            android:parentActivityName="gclz.myapps.unfuel.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gclz.myapps.unfuel.MainActivity" />
        </activity>
        <activity
            android:name="gclz.myapps.unfuel.CreateNewCarActivity"
            android:label="@string/title_activity_create_new_car"
            android:parentActivityName="gclz.myapps.unfuel.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gclz.myapps.unfuel.MainActivity" />
        </activity>
    </application>

</manifest>
